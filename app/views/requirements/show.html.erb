<div class="page-header">
  <h3>Requirement #<%= @requirement.id %></h3>
</div>

<div class="row">
  <div class="col-md-12 mb-2">
    <dl class="dl-horizontal">
      <dt>Employee</dt>
      <dd>
        <% if @requirement.employee.present? %>
          <a href="/employees/<%= @requirement.employee_id %>">
            <%= @requirement.employee.mcm_userid %>
          </a>
        <% end %>
      </dd>

      <dt>Department</dt>
      <dd>
        <% if @requirement.department.present? %>
          <a href="/departments/<%= @requirement.department_id %>">
            <%= @requirement.department.name %>
          </a>
        <% end %>
      </dd>

      <dt>Elearning</dt>
      <dd>
        <% if @requirement.elearning.present? %>
          <a href="/elearnings/<%= @requirement.elearning_id %>">
            <%= @requirement.elearning.title %>
          </a>
        <% end %>
      </dd>

    </dl>

    <div class="btn-group btn-group-justified">
      <a href="/requirements" class="btn btn-primary">
        Back
      </a>
      <a href="/requirements/<%= @requirement.id %>/edit" class="btn btn-warning">
        Edit
      </a>
      <a href="/delete_requirement/<%= @requirement.id %>" class="btn btn-danger" rel="nofollow">
        Delete
      </a>
    </div>
  </div>
</div>
