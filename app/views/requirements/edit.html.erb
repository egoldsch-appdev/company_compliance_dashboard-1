<!-- Validation failure messages -->
<% if @requirement.errors.any? %>
  <% @requirement.errors.full_messages.each do |message| %>
    <div class="alert alert-dismissable alert-danger">
      <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
      <%= message %>
    </div>
  <% end %>
<% end %>

<div class="page-header">
  <h3>Edit Requirement #<%= @requirement.id %></h3>
</div>

<div class="row">
  <div class="col-md-12">
    <form action="/update_requirement/<%= @requirement.id %>" method="post">
      <!-- Hidden input for authenticity token to protect from forgery -->
      <input name="authenticity_token" type="hidden" value="<%= form_authenticity_token %>">

      <!-- Label and input for employee_id -->
      <div class="form-group">
        <label for="employee_id" class="control-label">
          Employee
        </label>

        <%= select_tag(:employee_id, options_from_collection_for_select(Employee.all, :id, :mcm_userid, @requirement.employee_id), :class => "form-control") %>
      </div>

      <!-- Label and input for department_id -->
      <div class="form-group">
        <label for="department_id" class="control-label">
          Department
        </label>

        <%= select_tag(:department_id, options_from_collection_for_select(Department.all, :id, :name, @requirement.department_id), :class => "form-control") %>
      </div>

      <!-- Label and input for elearning_id -->
      <div class="form-group">
        <label for="elearning_id" class="control-label">
          Elearning
        </label>

        <input type="text" id="elearning_id" name="elearning_id" placeholder="Elearning" class="form-control" value="<%= @requirement.elearning_id %>">
      </div>

      <button class="btn btn-warning">
        Update Requirement
      </button>
      or
      <a href="/requirements/<%= @requirement.id %>">Cancel</a>
    </form>
  </div>
</div>
