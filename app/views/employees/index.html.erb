                  </span>
              </div>
            </div>
          </div>
      </div>
      <script type="text/javascript">
          $(function () {
              $('#created_atgteqPicker').datetimepicker({
                  format: 'YYYY-MM-DD hh:mm:SS'
              });
              $('#created_atlteqPicker').datetimepicker({
                  useCurrent: false,
                  format: 'YYYY-MM-DD hh:mm:SS'
              });
              $('#created_atgteqPicker').on("dp.change", function (e) {
                  $('#created_atlteqPicker').data("DateTimePicker").minDate(e.date);
              });
              $('#created_atlteqPicker').on("dp.change", function (e) {
                  $('#created_atgteqPicker').data("DateTimePicker").maxDate(e.date);
              });
          });
      </script>

        <div class="form-group">
      <%= f.label :department_name_cont, "Department name contains" %>
      <%= f.text_field :department_name_cont, :class => "form-control", :placeholder => "Department name contains" %>
    </div>

      <%= f.submit :class => "btn btn-primary btn-block mb-1" %>

      <a href="/employees" class="btn btn-default btn-block mb-1">Clear filters</a>
    <% end %>
    <a class="btn btn-default btn-block mb-1" data-toggle="collapse" href="#employees_filters">
      Show Filters
    </a>
  </div>
</div>

<div class="row">
  <div class="col-md-12">
    <table class="table table-striped table-hover">
      <tr>
        <th>Mcm userid</th>
        <th>First name</th>
        <th>Last name</th>
        <th>Doh</th>
        <th>Branch</th>
        <th>Dept start date</th>
        <th>Prev dept</th>
        <th>Prev dept start date</th>
        <th>Department</th>
        <th>Actions</th>
      </tr>

      <% @employees.each do |employee| %>
      <tr>
        <td><%= employee.mcm_userid %></td>
        <td><%= employee.first_name %></td>
        <td><%= employee.last_name %></td>
        <td><%= employee.doh %></td>
        <td><%= employee.branch %></td>
        <td><%= employee.dept_start_date %></td>
        <td><%= employee.prev_dept_id %></td>
        <td><%= employee.prev_dept_start_date %></td>
        <td>
          <% if employee.department.present? %>
            <a href="/departments/<%= employee.department.id %>">
              <%= employee.department.name %>
            </a>
          <% end %>
        </td>
        <td>
          <a href="/employees/<%= employee.id %>" class="btn btn-primary">Show</a>
          <a href="/employees/<%= employee.id %>/edit" class="btn btn-warning">Edit</a>
          <a href="/delete_employee/<%= employee.id %>" class="btn btn-danger" rel="nofollow">Delete</a>
        </td>
      </tr>
      <% end %>
    </table>
    <%= paginate @employees, theme: 'twitter-bootstrap-4' %>
  </div>
</div>
