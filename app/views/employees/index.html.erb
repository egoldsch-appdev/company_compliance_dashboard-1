<div class="page-header">
  <h1>
    Employees
    <a href="/employees/new" class="btn btn-lg btn-success">New Employee</a>
  </h1>
</div><div class="row mb-1">
  <div class="col-md-12">
    <%= search_form_for @q, :class => collapse_search_form, :id => "employees_filters" do |f| %>
      <p class="lead">Narrow results:</p>

        <div class="form-group">
  <%= f.label :mcm_userid, "Mcm userid" %>
  <div class="row">
    <div class='col-md-6 mb-1'>
      <%= f.text_field :mcm_userid_gteq, :class => "form-control", :placeholder => "Mcm userid greater than or equal to" %>
    </div>
    <div class='col-md-6'>
      <%= f.text_field :mcm_userid_lteq, :class => "form-control", :placeholder => "Mcm userid less than or equal to" %>
    </div>
  </div>
</div>

<div class="form-group">
          <%= f.label :prev_dept_start_date, "Prev dept start date" %>
          <div class="row">
            <div class='col-md-6 mb-1'>
              <div class='input-group date' id='prev_dept_start_dategteqPicker'>
                  <%= f.text_field :prev_dept_start_date_gteq, :class => "form-control", :placeholder => "Prev dept start date greater than or equal to" %>
                  <span class="input-group-addon">
                      <span class="glyphicon glyphicon-calendar"></span>
                  </span>
              </div>
            </div>

            <div class='col-md-6'>
              <div class='input-group date' id='prev_dept_start_datelteqPicker'>
                  <%= f.text_field :prev_dept_start_date_lteq, :class => "form-control", :placeholder => "Prev dept start date less than or equal to" %>
                  <span class="input-group-addon">
                      <span class="glyphicon glyphicon-calendar"></span>
                  </span>
              </div>
            </div>
          </div>
      </div>
      <script type="text/javascript">
          $(function () {
              $('#prev_dept_start_dategteqPicker').datetimepicker({
                  format: 'MM/DD/YYYY'
              });
              $('#prev_dept_start_datelteqPicker').datetimepicker({
                  useCurrent: false,
                  format: 'MM/DD/YYYY'
              });
              $('#prev_dept_start_dategteqPicker').on("dp.change", function (e) {
                  $('#prev_dept_start_datelteqPicker').data("DateTimePicker").minDate(e.date);
              });
              $('#prev_dept_start_datelteqPicker').on("dp.change", function (e) {
                  $('#prev_dept_start_dategteqPicker').data("DateTimePicker").maxDate(e.date);
              });
          });
      </script>

<div class="form-group">
  <%= f.label :prev_dept_id, "Prev dept" %>
  <div class="row">
    <div class='col-md-6 mb-1'>
