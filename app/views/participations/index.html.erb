<div class="page-header">
  <h1>
    Participations
    <a href="/participations/new" class="btn btn-lg btn-success">New Participation</a>
  </h1>
</div>

<div class="row">
  <div class="col-md-12">
    <table class="table table-striped table-hover">
      <tr>
        <th>Employee</th>
        <th>Elearning</th>
        <th>Actions</th>
      </tr>

      <% @participations.each do |participation| %>
      <tr>
        <td>
          <% if participation.employee.present? %>
            <a href="/employees/<%= participation.employee.id %>">
              <%= participation.employee.mcm_userid %>
            </a>
          <% end %>
        </td>
        <td>
          <% if participation.elearning.present? %>
            <a href="/elearnings/<%= participation.elearning.id %>">
              <%= participation.elearning.title %>
            </a>
          <% end %>
        </td>
        <td>
          <a href="/participations/<%= participation.id %>" class="btn btn-primary">Show</a>
          <a href="/participations/<%= participation.id %>/edit" class="btn btn-warning">Edit</a>
          <a href="/delete_participation/<%= participation.id %>" class="btn btn-danger" rel="nofollow">Delete</a>
        </td>
      </tr>
      <% end %>
    </table>
    <%= paginate @participations, theme: 'twitter-bootstrap-4' %>
  </div>
</div>
