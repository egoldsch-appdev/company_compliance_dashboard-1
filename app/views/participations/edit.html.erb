<!-- Validation failure messages -->
<% if @participation.errors.any? %>
  <% @participation.errors.full_messages.each do |message| %>
    <div class="alert alert-dismissable alert-danger">
      <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
      <%= message %>
    </div>
  <% end %>
<% end %>

<div class="page-header">
  <h3>Edit Participation #<%= @participation.id %></h3>
</div>

<div class="row">
  <div class="col-md-12">
    <form action="/update_participation/<%= @participation.id %>" method="post">
      <!-- Hidden input for authenticity token to protect from forgery -->
      <input name="authenticity_token" type="hidden" value="<%= form_authenticity_token %>">

      <!-- Label and input for employee_id -->
      <div class="form-group">
        <label for="employee_id" class="control-label">
          Employee
        </label>

        <%= select_tag(:employee_id, options_from_collection_for_select(Employee.all, :id, :mcm_userid, @participation.employee_id), :class => "form-control") %>
      </div>

      <!-- Label and input for elearning_id -->
      <div class="form-group">
        <label for="elearning_id" class="control-label">
          Elearning
        </label>

        <%= select_tag(:elearning_id, options_from_collection_for_select(Elearning.all, :id, :title, @participation.elearning_id), :class => "form-control") %>
      </div>

      <button class="btn btn-warning">
        Update Participation
      </button>
      or
      <a href="/participations/<%= @participation.id %>">Cancel</a>
    </form>
  </div>
</div>
