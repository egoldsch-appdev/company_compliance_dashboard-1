<div class="page-header">
  <h1>
    Elearnings
    <a href="/elearnings/new" class="btn btn-lg btn-success">New Elearning</a>
  </h1>
</div><div class="row mb-1">
  <div class="col-md-12">
    <%= search_form_for @q, :class => collapse_search_form, :id => "elearnings_filters" do |f| %>
      <p class="lead">Narrow results:</p>

        <div class="form-group">
    <%= f.label :title_cont, "Title contains" %>
    <%= f.text_field :title_cont, :class => "form-control", :placeholder => "Title contains" %>
  </div>

<div class="form-group">
          <%= f.label :due_date, "Due date" %>
          <div class="row">
            <div class='col-md-6 mb-1'>
              <div class='input-group date' id='due_dategteqPicker'>
                  <%= f.text_field :due_date_gteq, :class => "form-control", :placeholder => "Due date greater than or equal to" %>
                  <span class="input-group-addon">
                      <span class="glyphicon glyphicon-calendar"></span>
                  </span>
              </div>
            </div>

            <div class='col-md-6'>
              <div class='input-group date' id='due_datelteqPicker'>
                  <%= f.text_field :due_date_lteq, :class => "form-control", :placeholder => "Due date less than or equal to" %>
                  <span class="input-group-addon">
                      <span class="glyphicon glyphicon-calendar"></span>
                  </span>
              </div>
            </div>
          </div>
      </div>
      <script type="text/javascript">
          $(function () {
              $('#due_dategteqPicker').datetimepicker({
                  format: 'MM/DD/YYYY'
              });
              $('#due_datelteqPicker').datetimepicker({
                  useCurrent: false,
                  format: 'MM/DD/YYYY'
              });
              $('#due_dategteqPicker').on("dp.change", function (e) {
                  $('#due_datelteqPicker').data("DateTimePicker").minDate(e.date);
              });
              $('#due_datelteqPicker').on("dp.change", function (e) {
                  $('#due_dategteqPicker').data("DateTimePicker").maxDate(e.date);
              });
          });
      </script>

<div class="form-group">
    <%= f.label :link_cont, "Link contains" %>
    <%= f.text_field :link_cont, :class => "form-control", :placeholder => "Link contains" %>
  </div>

<div class="form-group">
    <%= f.label :duration_cont, "Duration contains" %>
    <%= f.text_field :duration_cont, :class => "form-control", :placeholder => "Duration contains" %>
  </div>

<div class="form-group">
          <%= f.label :created_at, "Created at" %>
          <div class="row">
            <div class='col-md-6 mb-1'>
              <div class='input-group date' id='created_atgteqPicker'>
                  <%= f.text_field :created_at_gteq, :class => "form-control", :placeholder => "Created at greater than or equal to" %>
                  <span class="input-group-addon">
                      <span class="glyphicon glyphicon-calendar"></span>
                  </span>
              </div>
            </div>

            <div class='col-md-6'>
              <div class='input-group date' id='created_atlteqPicker'>
                  <%= f.text_field :created_at_lteq, :class => "form-control", :placeholder => "Created at less than or equal to" %>
                  <span class="input-group-addon">
                      <span class="glyphicon glyphicon-calendar"></span>
                  </span>
              </div>
            </div>
          </div>
      </div>
      <script type="text/javascript">
          $(function () {
              $('#created_atgteqPicker').datetimepicker({
                  format: 'YYYY-MM-DD hh:mm:SS'
              });
              $('#created_atlteqPicker').datetimepicker({
                  useCurrent: false,
                  format: 'YYYY-MM-DD hh:mm:SS'
              });
              $('#created_atgteqPicker').on("dp.change", function (e) {
                  $('#created_atlteqPicker').data("DateTimePicker").minDate(e.date);
              });
              $('#created_atlteqPicker').on("dp.change", function (e) {
                  $('#created_atgteqPicker').data("DateTimePicker").maxDate(e.date);
              });
          });
      </script>

        

      <%= f.submit :class => "btn btn-primary btn-block mb-1" %>

      <a href="/elearnings" class="btn btn-default btn-block mb-1">Clear filters</a>
    <% end %>
    <a class="btn btn-default btn-block mb-1" data-toggle="collapse" href="#elearnings_filters">
      Show Filters
    </a>
  </div>
</div>

<div class="row">
  <div class="col-md-12">
    <table class="table table-striped table-hover">
      <tr>
        <th>Title</th>
        <th>Duration</th>
        <th>Link</th>
        <th>Due date</th>
        <th>Actions</th>
      </tr>

      <% @elearnings.each do |elearning| %>
      <tr>
        <td><%= elearning.title %></td>
        <td><%= elearning.duration %></td>
        <td><%= elearning.link %></td>
        <td><%= elearning.due_date %></td>
        <td>
          <a href="/elearnings/<%= elearning.id %>" class="btn btn-primary">Show</a>
          <a href="/elearnings/<%= elearning.id %>/edit" class="btn btn-warning">Edit</a>
          <a href="/delete_elearning/<%= elearning.id %>" class="btn btn-danger" rel="nofollow">Delete</a>
        </td>
      </tr>
      <% end %>
    </table>
    <%= paginate @elearnings, theme: 'twitter-bootstrap-4' %>
  </div>
</div>
